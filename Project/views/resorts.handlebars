<button class="btn"><a href="index.html">Home Page</a></button>

<h1 class="container text-center mb-4">Resorts</h1>

<div id="customTable" class="container col-10">
	<table class="table">
		<thead>
			<th>Name</th>
			<th>Location</th>
			<th>Size (acres)</th>
			<th>Ticket Price</th>
		</thead>
		<tbody>
			{{#each resorts}}
			<tr>
				<td>{{name}}</td>
				<td>{{location}}</td>
				<td>{{size}}</td>
				<td>${{price}}</td>
				<td id="tableBtn"><a href="/resorts/{{id}}">Update</a></td>
				<td id="tableBtn"><button class="btn btn-danger" onclick="deleteResort({{id}})">Delete</button></td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>

<div class="container col-6 my-4">
	<h3>Add Resort</h3>
	<form action="/resorts" method="POST">
		<div class="form-group">
			<label for="name">Name:</label>
			<input type="text" class="form-control" name="name" maxlength="30" required>
		</div>
		<div class="form-group">
			<label for="location">Location:</label>
			<input type="text" class="form-control" name="location" placeholder="State" maxlength="30" required>
		</div>
		<div class="form-group">
			<label for="size">Size:</label>
			<input type="number" class="form-control" name="size" placeholder="Acres" min="1" max="9999" required>
		</div>
		<div class="form-group">
			<label for="price">Ticket Price:</label>
			<input type="number" class="form-control" name="price" placeholder="USD" min="1" max="9999" required>
		</div>
		<button type="submit" class="btn btn-primary col-4">Add</button>
	</form>
</div>