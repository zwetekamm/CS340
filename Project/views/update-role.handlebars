<div class="container text-center mb-4">
	<h2>Update Resort: {{roles.title}} </h2>
</div>

<div class="container col-6 my-4">
	<form id="update-role" action="/roles/{{roles.id}}" method="POST">
		<div class="form-group">
			<label for="title">Title:</label>
			<input type="text" class="form-control" name="title" value="{{roles.title}}">
		</div>
		<button class="btn btn-primary" onclick="updateRole({{roles.id}})">UPDATE</button>
	</form>
</div>

<div class="container">
	<button class="btn"><a href="/roles">Back</a></button>
</div>
