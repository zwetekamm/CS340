<button class="btn"><a href="/roles">Back</a></button>

<div class="container text-center mb-4">
	<h2>Update Role:</h2>
	<h3>{{roles.title}}</h3>
</div>

<div class="container col-6 my-4">
	<form id="update-role" action="/roles/{{roles.id}}" method="POST">
		<div class="form-group">
			<label for="title">Title:</label>
			<input type="text" class="form-control" name="title" value="{{roles.title}}" maxlength="20" required>
		</div>
		<button class="btn btn-primary col-4" onclick="updateRole({{roles.id}})">Update</button>
	</form>
</div>