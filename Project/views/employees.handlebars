<!DOCTYPE html>
<html>

<h1 class="container text-center mb-4">Employees</h1>

<div class="container border">
	<table class="table">
		<h3>Employees in the Database</h3>
		<thead>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Date of Birth</th>
			<th>Assigned Resort</th>
			<th>Assigned Lift</th>
		</thead>
		<tbody>
			{{#each employees}}
			<tr>
				<td>{{fname}}</td>
				<td>{{lname}}</td>
				<td>{{birthday}}</td>
				<td>{{rname}}</td>
				<td>{{liname}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>
</div>

<div class="container-fluid row">
	<div class="container col-4 my-4 border">
		<h3>Add Employee</h3>
		<form action="/employees" method="POST">
			<div class="form-group">
				<label for="fname">First Name:</label>
				<input type="text" class="form-control" name="fname">
			</div>
			<div class="form-group">
				<label for="lname">Last Name:</label>
				<input type="text" class="form-control" name="lname">
			</div>
			<div class="form-group">
				<label for="birthday">Date of Birth:</label>
				<input type="text" class="form-control" name="birthday" placeholder="YYYY-MM-DD">
			</div>
			<div class="form-group">
				<label for="resort">Assigned Resort:</label>
				<select class="form-control" name="resort">
					{{#each resorts}}
						<option value="{{id}}">{{name}}</option>
					{{/each}}
				</select>
			</div>
			<div class="form-group">
				<label for="lift">Assigned Lift:</label>
				<select class="form-control" name="lift">
					{{#each lifts}}
						<option value="{{id}}">{{name}}</option>
					{{/each}}
				</select>
			</div>
			<button type="submit" class="btn btn-primary">Add</button>
		</form>
	</div>

	<div class="container col-4 my-4 border">
		<h3>Update Employee</h3>
		<form id="update_employee" action="/update_employee" method="POST">
			<div class="form-group">
				<label for="employee">Select Employee:</label>
				<select class="form-control" name="employee">
					<option>fname lname</option>
					<option>fname lname</option>
					<option>Etc...</option>
				</select>
			</div>
			<div class="form-group">
				<label for="fname">First Name:</label>
				<input type="text" class="form-control" name="fname">
			</div>
			<div class="form-group">
				<label for="lname">Last Name:</label>
				<input type="text" class="form-control" name="lname">
			</div>
			<div class="form-group">
				<label for="birthday">Date of Birth:</label>
				<input type="text" class="form-control" name="birthday" placeholder="YYYY-MM-DD">
			</div>
			<div class="form-group">
				<label for="resort">Assigned Resort:</label>
				<select class="form-control" name="resort">
					<option>Resort Name</option>
					<option>Resort Name</option>
					<option>Etc...</option>
				</select>
			</div>
			<div class="form-group">
				<label for="lift">Assigned Lift:</label>
				<select class="form-control" name="lift">
					<option>Lift Name</option>
					<option>Lift Name</option>
					<option>Etc...</option>
				</select>
			</div>
			<button type="submit" class="btn btn-primary">UPDATE</button>
		</form>
	</div>

	<div class="container col-3 my-4 border">
		<h3>Remove Employee</h3>
		<form id="delete_employee" action="/delete_employee" method="POST">
			<div class="form-group">
				<label for="employee">Select Employee:</label>
				<select class="form-control" name="employee">
					<option>fname lname</option>
					<option>fname lname</option>
					<option>Etc...</option>
				</select>
			</div>
			<button type="submit" class="btn btn-danger">REMOVE</button>
		</form>
	</div>
</div>

<div class="container">
	<a href="index.html">Back to Home Page</a>
</div>

</html>